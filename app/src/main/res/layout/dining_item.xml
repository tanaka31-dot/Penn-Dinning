<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/dining_image_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/dining"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/status_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dinner"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/dining_image_rv"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id = "@+id/dining_name_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/dining_image_rv"
        app:layout_constraintTop_toBottomOf="@id/status_rv"
        android:layout_marginLeft="5dp"/>

    <LinearLayout
        android:id="@+id/text_box_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@id/dining_image_rv"
        app:layout_constraintTop_toBottomOf="@id/dining_name_rv"
        android:layout_marginLeft="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>